{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "registry": "https://registry.npmjs.org",
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "4.x",
        "5.x-additional-headers-publish"
      ],
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "gitRemote": "origin",
      "loglevel": "verbose"
    },
    "run": {
      "stream": true
    },
    "publish": {
      "loglevel": "verbose"
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/test/**",
    "docs"
  ]
}